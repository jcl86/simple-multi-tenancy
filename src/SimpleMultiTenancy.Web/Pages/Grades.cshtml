@page
@model SimpleMultiTenancy.Web.Pages.GradesModel
@{
}

<div class="text-center">
    <h1 class="display-4">Grades</h1>
</div>

<section>

    <form method="post">
        @for (var i = 0; i < Model.Grades.Count(); i++)
        {
            <input type="hidden" asp-for="Grades[i].Id" />
            <div class="d-flex flex-column gap-4">

                <div class="">
                    <label> @Model.Grades[i].Subject</label>
                    <input  asp-for="Grades[i].Value" class="form-control" />
                    <span class="text-danger" asp-validation-for="Grades[i].Value"></span>
                    <span class="text-danger" asp-validation-for="Grades[i].Value"></span>
                </div>
            </div>
        }

        <button type="submit" class="btn btn-primary">
            Save
        </button>

    </form>

</section>